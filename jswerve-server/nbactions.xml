<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:java</goal>
            </goals>
            <properties>
                <exec.mainClass>com.tbodt.jswerve.server.JSwerve</exec.mainClass>
                <exec.arguments>${project.parent.basedir}/distribution/target/distribution-0.1-SNAPSHOT-home</exec.arguments>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.3.2:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -classpath %classpath com.tbodt.jswerve.server.JSwerve ${project.parent.basedir}/distribution/target/distribution-0.1-SNAPSHOT-home</exec.args>
                <exec.executable>java</exec.executable>
                <jpda.listen>true</jpda.listen>
            </properties>
        </action>
    </actions>
